{
  "name": "@tamland/logger",
  "version": "0.0.15",
  "description": "Logger for tamland tasks",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:types",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore src/cli --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:types": "tsc --emitDeclarationOnly && rm lib/**/*.test.d.ts",
    "lint": "eslint src --ext .jsx,.js,.tsx,.ts --ignore-pattern *.d.ts",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "jasmine-ts --config=jasmine.json"
  },
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feight/tamland"
  },
  "author": "News Team (https://www.newsteam.co.za)",
  "contributors": [
    {
      "name": "Peter Bodechtel",
      "url": "https://www.sweetlikepete.com"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/feight/tamland/issues"
  },
  "keywords": [
    "tamland",
    "@tamland"
  ],
  "homepage": "https://github.com/feight/tamland/tree/master/packages/logger#readme",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@types/node": "^12.7.2",
    "@types/strip-color": "^0.1.0",
    "@types/text-table": "^0.2.1",
    "chalk": "^2.4.2",
    "codeframe": "^0.0.1",
    "get-cursor-position": "^1.0.5",
    "justify-text": "^1.0.1",
    "node-pty": "^0.8.1",
    "strip-ansi": "^5.2.0",
    "strip-color": "^0.1.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@tamland/babel": "^0.0.10",
    "@tamland/eslint": "^0.0.19",
    "babel-tape-runner": "^3.0.0",
    "renamer": "^1.1.2",
    "tape": "^4.11.0"
  }
}
