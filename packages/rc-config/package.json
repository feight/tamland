{
  "name": "@tamland/rc-config",
  "version": "0.0.1",
  "description": "@tamland rc project configuration",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:types",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore src/cli --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src test --ext .jsx,.js,.tsx,.ts --ignore-pattern *.d.ts",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "babel-tape-runner ./test/*.js"
  },
  "browserslist": "node 8",
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feight/tamland"
  },
  "author": "News Team (https://www.newsteam.co.za)",
  "contributors": [
    {
      "name": "Peter Bodechtel",
      "url": "https://www.sweetlikepete.com"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/feight/tamland/issues"
  },
  "keywords": [
    "tamland",
    "@tamland"
  ],
  "homepage": "https://github.com/feight/tamland/tree/master/packages/rc-config#readme",
  "files": [
    "lib"
  ],
  "dependencies": {
    "rc-config-loader": "^2.0.3"
  },
  "devDependencies": {
    "@tamland/babel": "^0.0.3",
    "@tamland/eslint": "^0.0.1",
    "babel-tape-runner": "^3.0.0",
    "renamer": "^1.1.2",
    "tape": "^4.10.2"
  }
}
