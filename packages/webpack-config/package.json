    "@types/webpack-node-externals": "^1.6.3",
    "babel-tape-runner": "^3.0.0",
    "renamer": "^1.1.2",
    "tape": "^4.11.0",
    "webpack": "^4.37.0"
  },
  "peerDependencies": {
    "webpack": "^4.37.0"
  }
}
