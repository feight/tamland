{
  "name": "@tamland/webpack-config",
  "version": "0.0.36",
  "description": "Shared config for webpack",
  "main": "lib",
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:types",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore src/cli --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src test --ext .jsx,.js,.tsx,.ts --ignore-pattern *.d.ts",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "babel-tape-runner ./test/*.js"
  },
  "browserslist": "node 8",
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feight/tamland.git"
  },
  "author": "News Team (https://www.newsteam.co.za)",
  "contributors": [
    {
      "name": "Peter Bodechtel",
      "url": "https://www.sweetlikepete.com"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/feight/tamland/issues"
  },
  "homepage": "https://github.com/feight/tamland/tree/master/packages/webpack-config#readme",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@loadable/babel-plugin": "^5.10.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "assets-webpack-plugin": "^3.9.10",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "clean-css-loader": "^2.0.0",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.1.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "file-loader": "^4.1.0",
    "html-loader": "^0.5.5",
    "image-process-loader": "^1.1.1",
    "inspect-loader": "^1.0.0",
    "merge": "^1.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "modernizr": "^3.7.1",
    "modernizr-loader": "^1.0.1",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "rc-config-loader": "^2.0.4",
    "sass-loader": "^7.1.0",
    "sharp": "^0.22.1",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-json-loader": "^1.0.0",
    "webpack-merge": "^4.2.1",
    "webpack-modernizr-loader": "^5.0.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@tamland/babel": "^0.0.10",
    "@tamland/eslint": "^0.0.15",
    "@types/assets-webpack-plugin": "^3.9.0",
    "@types/autoprefixer": "^9.5.0",
    "@types/duplicate-package-checker-webpack-plugin": "^2.1.0",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/mini-css-extract-plugin": "^0.2.1",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.4",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/webpack": "^4.32.0",
