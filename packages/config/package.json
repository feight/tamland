{
  "name": "@tamland/config",
  "version": "0.0.15",
  "description": "@tamland project configuration",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:types && npm run build:static",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore src/cli --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:static": "cp -R src/images lib/images",
    "build:types": "tsc --emitDeclarationOnly && rm lib/**/*.test.d.ts",
    "lint": "eslint src --ext .jsx,.js,.tsx,.ts --ignore-pattern *.d.ts",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "jasmine-ts --config=jasmine.json"
  },
  "browserslist": "node 8",
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feight/tamland"
  },
  "author": "News Team (https://www.newsteam.co.za)",
  "contributors": [
    {
      "name": "Peter Bodechtel",
      "url": "https://www.sweetlikepete.com"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/feight/tamland/issues"
  },
  "keywords": [
    "tamland",
    "@tamland"
  ],
  "homepage": "https://github.com/feight/tamland/tree/master/packages/config#readme",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@tamland/logger": "0.0.15",
    "deepmerge": "^4.0.0",
    "rc-config-loader": "^2.0.4"
  },
  "devDependencies": {
    "@tamland/babel": "^0.0.10",
    "@tamland/eslint": "^0.0.19",
    "@types/deepmerge": "^2.2.0",
    "@types/node": "^12.7.2",
    "babel-tape-runner": "^3.0.0",
    "color-json": "^2.0.0",
    "renamer": "^1.1.2",
    "tape": "^4.11.0"
  }
}
