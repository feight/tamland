{
  "name": "@tamland/core",
  "version": "0.0.20",
  "description": "Node.js SSR application framework",
  "main": "lib",
  "types": "lib",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:static && npm run build:types",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore '**/*.d.ts' --out-dir lib --extensions '.js,.jsx,.ts,.tsx'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:static": "cp -R src/static lib/static",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src test --ext .jsx,.js,.tsx,.ts --ignore-pattern *.d.ts",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "babel-tape-runner ./test/*.js"
  },
  "browserslist": "node 8",
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feight/tamland.git"
  },
  "author": "News Team (https://www.newsteam.co.za)",
  "contributors": [
    {
      "name": "Peter Bodechtel",
      "url": "https://www.sweetlikepete.com"
    }
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/feight/tamland/issues"
  },
  "homepage": "https://github.com/feight/tamland/tree/master/packages/core#readme",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@google-cloud/logging-winston": "^1.1.1",
    "@loadable/component": "^5.10.1",
    "@loadable/server": "^5.9.0",
    "@types/modernizr": "^3.5.3",
    "@types/react-helmet": "^5.0.8",
    "@types/webpack-env": "^1.13.9",
    "apollo-client": "^2.6.3",
    "body-parser": "^1.19.0",
    "common-tags": "^1.8.0",
    "compression": "^1.7.4",
    "connected-react-router": "^6.4.0",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.1.4",
    "deepmerge": "^3.3.0",
    "express": "^4.17.1",
    "express-graphql": "^0.8.0",
    "express-http-proxy": "^1.5.1",
    "express-jwt": "^5.3.1",
    "express-slash": "^2.0.1",
    "graphql": "^14.4.1",
    "helmet": "^3.18.0",
    "history": "^4.9.0",
    "js-cookie": "^2.2.0",
    "parseurl": "^1.3.3",
    "prop-types": "^15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-frontload": "^1.1.0",
    "react-helmet": "^5.2.1",
